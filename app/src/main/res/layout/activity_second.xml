<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".KAZ_EditActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/main1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/save"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/save" />

                </LinearLayout>

            </LinearLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <androidx.cardview.widget.CardView
                            android:layout_width="350dp"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/main3"
                            android:layout_below="@+id/main1"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_weight="1"
                            app:cardCornerRadius="@dimen/_5sdp">

                            <LinearLayout
                                android:id="@+id/main2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_above="@+id/main3"
                                android:layout_below="@+id/main1"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:id="@+id/container"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@color/white">

                                    <ImageView
                                        android:id="@+id/image"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/_250sdp"
                                        android:layout_gravity="center"
                                        android:adjustViewBounds="true"
                                        android:src="@drawable/ic_launcher_background" />


                                    <ImageView
                                        android:id="@+id/frameimg"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/peacock_frame_1" />


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom"
                                        android:orientation="vertical">


                                        <HorizontalScrollView
                                            android:id="@+id/horizonatalscrollview"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:visibility="gone">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal">

                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_margin="4dp"
                                                    app:cardCornerRadius="8dp">

                                                    <ImageView
                                                        android:id="@+id/auto_fix"
                                                        android:layout_width="50dp"
                                                        android:layout_height="50dp"
                                                        android:scaleType="centerCrop"
                                                        android:src="@drawable/auto_fix" />
                                                </androidx.cardview.widget.CardView>

                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_margin="4dp"
                                                    app:cardCornerRadius="8dp">

                                                    <ImageView
                                                        android:id="@+id/b_n_w"
                                                        android:layout_width="50dp"
                                                        android:layout_height="50dp"
                                                        android:scaleType="centerCrop"
                                                        android:src="@drawable/b_n_w" />
                                                </androidx.cardview.widget.CardView>

                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_margin="4dp"
                                                    app:cardCornerRadius="8dp">

                                                    <ImageView
                                                        android:id="@+id/flip_vertical"
                                                        android:layout_width="50dp"
                                                        android:layout_height="50dp"
                                                        android:scaleType="centerCrop"
                                                        android:src="@drawable/flip_vertical" />
                                                </androidx.cardview.widget.CardView>

                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_margin="4dp"
                                                    app:cardCornerRadius="8dp">

                                                    <ImageView
                                                        android:id="@+id/contrast"
                                                        android:layout_width="50dp"
                                                        android:layout_height="50dp"
                                                        android:scaleType="centerCrop"
                                                        android:src="@drawable/contrast" />
                                                </androidx.cardview.widget.CardView>

                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_margin="4dp"
                                                    app:cardCornerRadius="8dp">

                                                    <ImageView
                                                        android:id="@+id/cross_process"
                                                        android:layout_width="50dp"
                                                        android:layout_height="50dp"
                                                        android:scaleType="centerCrop"
                                                        android:src="@drawable/cross_process" />
                                                </androidx.cardview.widget.CardView>

                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_margin="4dp"
                                                    app:cardCornerRadius="8dp">

                                                    <ImageView
                                                        android:id="@+id/documentary"
                                                        android:layout_width="50dp"
                                                        android:layout_height="50dp"
                                                        android:scaleType="centerCrop"
                                                        android:src="@drawable/documentary" />
                                                </androidx.cardview.widget.CardView>

                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_margin="4dp"
                                                    app:cardCornerRadius="8dp">

                                                    <ImageView
                                                        android:id="@+id/dual_tone"
                                                        android:layout_width="50dp"
                                                        android:layout_height="50dp"
                                                        android:scaleType="centerCrop"
                                                        android:src="@drawable/dual_tone" />
                                                </androidx.cardview.widget.CardView>

                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_margin="4dp"
                                                    app:cardCornerRadius="8dp">

                                                    <ImageView
                                                        android:id="@+id/fill_light"
                                                        android:layout_width="50dp"
                                                        android:layout_height="50dp"
                                                        android:scaleType="centerCrop"
                                                        android:src="@drawable/fill_light" />
                                                </androidx.cardview.widget.CardView>

                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_margin="4dp"
                                                    app:cardCornerRadius="8dp">

                                                    <ImageView
                                                        android:id="@+id/fish_eye"
                                                        android:layout_width="50dp"
                                                        android:layout_height="50dp"
                                                        android:scaleType="centerCrop"
                                                        android:src="@drawable/fish_eye" />
                                                </androidx.cardview.widget.CardView>

                                            </LinearLayout>

                                        </HorizontalScrollView>

                                        <HorizontalScrollView
                                            android:id="@+id/horizonatalscrollviewframe"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:scrollbars="none"
                                            android:visibility="gone">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:background="#fff"
                                                android:orientation="horizontal">


                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_margin="4dp"
                                                    app:cardCornerRadius="8dp">

                                                    <ImageView
                                                        android:id="@+id/peacock_frame_1"
                                                        android:layout_width="60dp"
                                                        android:layout_height="80dp"
                                                        android:scaleType="centerCrop"
                                                        android:src="@drawable/peacock_frame_1" />
                                                </androidx.cardview.widget.CardView>

                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_margin="4dp"
                                                    app:cardCornerRadius="8dp">

                                                    <ImageView
                                                        android:id="@+id/peacock_frame_2"
                                                        android:layout_width="60dp"
                                                        android:layout_height="80dp"
                                                        android:scaleType="centerCrop"
                                                        android:src="@drawable/peacock_frame_2" />
                                                </androidx.cardview.widget.CardView>

                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_margin="4dp"
                                                    app:cardCornerRadius="8dp">

                                                    <ImageView
                                                        android:id="@+id/peacock_frame_3"
                                                        android:layout_width="60dp"
                                                        android:layout_height="80dp"
                                                        android:scaleType="centerCrop"
                                                        android:src="@drawable/peacock_frame_3" />
                                                </androidx.cardview.widget.CardView>

                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_margin="4dp"
                                                    app:cardCornerRadius="8dp">

                                                    <ImageView
                                                        android:id="@+id/peacock_frame_4"
                                                        android:layout_width="60dp"
                                                        android:layout_height="80dp"
                                                        android:scaleType="centerCrop"
                                                        android:src="@drawable/peacock_frame_4" />
                                                </androidx.cardview.widget.CardView>

                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_margin="4dp"
                                                    app:cardCornerRadius="8dp">

                                                    <ImageView
                                                        android:id="@+id/peacock_frame_5"
                                                        android:layout_width="60dp"
                                                        android:layout_height="80dp"
                                                        android:scaleType="centerCrop"
                                                        android:src="@drawable/peacock_frame_5" />
                                                </androidx.cardview.widget.CardView>

                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_margin="4dp"
                                                    app:cardCornerRadius="8dp">

                                                    <ImageView
                                                        android:id="@+id/peacock_frame_6"
                                                        android:layout_width="60dp"
                                                        android:layout_height="80dp"
                                                        android:scaleType="centerCrop"
                                                        android:src="@drawable/peacock_frame_6" />
                                                </androidx.cardview.widget.CardView>

                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_margin="4dp"
                                                    app:cardCornerRadius="8dp">

                                                    <ImageView
                                                        android:id="@+id/peacock_frame_7"
                                                        android:layout_width="60dp"
                                                        android:layout_height="80dp"
                                                        android:scaleType="centerCrop"
                                                        android:src="@drawable/peacock_frame_7" />
                                                </androidx.cardview.widget.CardView>

                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_margin="4dp"
                                                    app:cardCornerRadius="8dp">

                                                    <ImageView
                                                        android:id="@+id/peacock_frame_8"
                                                        android:layout_width="60dp"
                                                        android:layout_height="80dp"
                                                        android:scaleType="centerCrop"
                                                        android:src="@drawable/peacock_frame_8" />
                                                </androidx.cardview.widget.CardView>

                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_margin="4dp"
                                                    app:cardCornerRadius="8dp">

                                                    <ImageView
                                                        android:id="@+id/peacock_frame_9"
                                                        android:layout_width="60dp"
                                                        android:layout_height="80dp"
                                                        android:scaleType="centerCrop"
                                                        android:src="@drawable/peacock_frame_9" />
                                                </androidx.cardview.widget.CardView>

                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_margin="4dp"
                                                    app:cardCornerRadius="8dp">

                                                    <ImageView
                                                        android:id="@+id/peacock_frame_10"
                                                        android:layout_width="60dp"
                                                        android:layout_height="80dp"
                                                        android:scaleType="centerCrop"
                                                        android:src="@drawable/peacock_frame_10" />
                                                </androidx.cardview.widget.CardView>

                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_margin="4dp"
                                                    app:cardCornerRadius="8dp">

                                                    <ImageView
                                                        android:id="@+id/peacock_frame_11"
                                                        android:layout_width="60dp"
                                                        android:layout_height="80dp"
                                                        android:scaleType="centerCrop"
                                                        android:src="@drawable/peacock_frame_11" />
                                                </androidx.cardview.widget.CardView>

                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_margin="4dp"
                                                    app:cardCornerRadius="8dp">

                                                    <ImageView
                                                        android:id="@+id/peacock_frame_12"
                                                        android:layout_width="60dp"
                                                        android:layout_height="80dp"
                                                        android:scaleType="centerCrop"
                                                        android:src="@drawable/peacock_frame_12" />
                                                </androidx.cardview.widget.CardView>

                                            </LinearLayout>
                                        </HorizontalScrollView>


                                        <com.kaz.gardenphotoframe.KAZ_HorizontalListView
                                            android:id="@+id/recycle"
                                            android:layout_width="match_parent"
                                            android:layout_height="50dp"
                                            android:layout_gravity="bottom"
                                            android:background="#fff"
                                            android:scrollbars="none"
                                            android:visibility="gone" />


                                    </LinearLayout>
                                </FrameLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                    <SeekBar
                        android:id="@+id/seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:background="#fff"
                        android:max="200"
                        android:progress="0"
                        android:visibility="gone"
                        android:progressTint="@color/primary"
                        android:thumbTint="@color/primary_second" />

                </FrameLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/add_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:background="@drawable/txtbg"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_back"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="Add Text"
                    android:textColor="#A800C5"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/ivDone"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_done"
                    app:tint="#A800C5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/tvEnterText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="30dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <SeekBar
                            android:id="@+id/sbSize"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="bottom"
                            android:background="@color/white"
                            android:max="200"
                            android:progress="0"
                            android:progressTint="@color/primary"
                            android:thumbTint="@color/primary_second"
                            android:visibility="gone" />

                        <SeekBar
                            android:id="@+id/sbOpacity"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="bottom"
                            android:background="@color/white"
                            android:max="255"
                            android:progress="255"
                            android:progressTint="@color/primary"
                            android:thumbTint="@color/primary_second"
                            android:visibility="gone" />

                        <com.kaz.gardenphotoframe.KAZ_HorizontalListView
                            android:id="@+id/hlvTexture"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="bottom"
                            android:scrollbars="none"
                            android:visibility="gone" />


                        <LinearLayout
                            android:id="@+id/llShadowContainer"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="1">

                            <ImageView
                                android:id="@+id/ivShadowColor"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.1"
                                android:src="@drawable/demo_color"
                                app:tint="@color/primary_second" />

                            <SeekBar
                                android:id="@+id/sbTextShadow"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.9"
                                android:background="@color/white"
                                android:max="25"
                                android:progressTint="@color/primary"
                                android:thumbTint="@color/primary_second" />

                        </LinearLayout>
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/gradient_shape"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="7">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/ivClearText"
                        android:layout_width="30dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        app:srcCompat="@drawable/ic_add_text" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:text="Add Text"
                        android:textColor="@color/white"
                        android:textSize="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/ivTextColor"
                        android:layout_width="30dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        app:srcCompat="@drawable/demo_color" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:text="TextColor"
                        android:textColor="@color/white"
                        android:textSize="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/ivSize"
                        android:layout_width="30dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        app:srcCompat="@drawable/demo_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:text="TextSize"
                        android:textColor="@color/white"
                        android:textSize="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/ivFont"
                        android:layout_width="30dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        app:srcCompat="@drawable/demo_style" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:text="Font"
                        android:textColor="@color/white"
                        android:textSize="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/ivOpacity"
                        android:layout_width="30dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        android:src="@drawable/opacity"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:text="Opacity"
                        android:textColor="@color/white"
                        android:textSize="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
