                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:text="Shadow"
                        android:textColor="@color/white"
                        android:textSize="10dp" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </FrameLayout>


